<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <stroke
        android:width="1dp"
        android:color="@color/gridItemStrokeColor" />

    <solid
        android:color="@color/gridItemBackgroundColor"
        android:alpha="0.5"
        />

    <gradient
        android:endColor="@color/defaultBackgroundColor"
        android:startColor="@color/gridItemStrokeColor"
        android:angle="270" />

    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

</shape>
